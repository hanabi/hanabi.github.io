{
  "name": "hanabi.github.io",
  "private": true,
  "scripts": {
    "build": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/build.mts",
    "check-valid": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/checkValidYAMLFiles.mts",
    "clear": "docusaurus clear",
    "compile-plugin": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/compilePlugin.mts",
    "deploy": "docusaurus deploy",
    "docusaurus": "docusaurus",
    "format": "eslint --fix . && prettier --write .",
    "lint": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/lint.mts",
    "prepare": "husky",
    "serve": "docusaurus serve",
    "start": "npm run compile-plugin && docusaurus start",
    "swizzle": "docusaurus swizzle",
    "update": "complete-cli update"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/faster": "3.9.2",
    "@docusaurus/plugin-content-docs": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-mermaid": "3.9.2",
    "@mdx-js/react": "3.1.1",
    "prism-react-renderer": "2.4.1",
    "raw-loader": "4.0.2",
    "react": "19.2.3",
    "react-circular-progressbar": "2.2.0",
    "react-dom": "19.2.3",
    "react-zoom-pan-pinch": "3.7.0",
    "yaml": "2.8.2",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@docusaurus/tsconfig": "3.9.2",
    "complete-cli": "1.5.11",
    "complete-lint": "5.1.3",
    "complete-node": "15.0.0",
    "git-pull-run": "1.6.2",
    "glob": "13.0.0",
    "husky": "9.1.7",
    "prettier-plugin-sh": "0.18.0",
    "typescript": "5.9.3",
    "webpack": "5.104.1"
  }
}

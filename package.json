{
  "name": "hanabi.github.io",
  "private": true,
  "scripts": {
    "build": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/build.mts",
    "check-valid": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/checkValidYAMLFiles.mts",
    "clear": "docusaurus clear",
    "compile-plugin": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/compilePlugin.mts",
    "deploy": "docusaurus deploy",
    "docusaurus": "docusaurus",
    "format": "prettier --write .",
    "lint": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/lint.mts",
    "nuke": "isaacscript nuke",
    "serve": "docusaurus serve",
    "start": "npm run compile-plugin && docusaurus start",
    "swizzle": "docusaurus swizzle",
    "update": "isaacscript update"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "@docusaurus/theme-mermaid": "^3.7.0",
    "@mdx-js/react": "^3.1.0",
    "core-js": "^3.40.0",
    "prism-react-renderer": "^2.4.1",
    "raw-loader": "^4.0.2",
    "react": "18.3.1",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "18.3.1",
    "react-zoom-pan-pinch": "^3.7.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@docusaurus/faster": "^3.7.0",
    "@docusaurus/tsconfig": "^3.7.0",
    "complete-lint": "^1.12.2",
    "complete-node": "^1.7.4",
    "glob": "^11.0.1",
    "isaacscript": "^5.2.4",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1"
  }
}
